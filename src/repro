#! /bin/bash

# adapted from /data/paul11/plucinsk/chandra/data/e0102/I3/scripts/repro.pl

set -eo pipefail

SCRIPTDIR=$( cd -- "$( dirname -- "${BASH_SOURCE[0]}" )" &> /dev/null && pwd )
. "$SCRIPTDIR/functions.sh"

[ $# -ge 1 ] && obsids="$@" || obsids=$(obsids $DET)

. ~/.bash_aliases
shopt -s expand_aliases

ciao

. "$SCRIPTDIR/tmppdir.sh"

for obsid in $obsids; do
    obsid=$(printf %05d $((10#"$obsid")))
    [ -d "$datadir/$obsid/repro" ] || {
	punlearn ardlib
	punlearn chandra_repro
	chandra_repro \
	    "$datadir/$obsid" \
	    "$datadir/$obsid/repro" \
	    check_vf_pha=no \
	    set_ardlib=no \
	    verbose=3 \
	    clob+
    }
done

